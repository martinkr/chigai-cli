{
  "name": "chigai-cli",
  "version": "1.0.0",
  "description": "Chigai: modern visual regression testing. CLI module.",
  "main": "./app/main.js",
  "author": "Martin Krause",
  "license": "MIT",
  "bin": {
    "chigai": "./bin/chigai"
  },
  "keywords": [
    "visual",
    "regression",
    "testing",
    "ci",
    "continious integration",
    "bdd",
    "tdd",
    "mocha",
    "chai",
    "node",
    "puppeteer",
    "css regression",
    "cli",
    "bash"
  ],
  "scripts": {
    "start": "./bin/chigai",
    "mocha": "./node_modules/mocha/bin/mocha",
    "nyc": "./node_modules/.bin/nyc --clean ./node_modules/.bin/mocha",
    "coverage": "./node_modules/.bin/nyc check-coverage --lines 100 --functions 100 --branches 100 --statements 100",
    "report": "./node_modules/.bin/nyc report --reporter=lcov --reporter=html",
    "test": "yarn nyc && yarn report && yarn coverage"
  },
  "dependencies": {
    "commander": "^2.11.0",
    "cross-spawn": "^5.1.0",
    "fs-extra-plus": "^0.1.3",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "chai": "4.1.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "4.4.1",
    "istanbul": "0.4.5",
    "jsdoc": "^3.5.4",
    "loke-jsdoc-theme": "^2.1.0",
    "mocha": "3.5.0",
    "nyc": "^11.2.1",
    "proxyquire": "^1.8.0",
    "sinon": "3.1.0",
    "sinon-chai": "2.12.0",
    "webpack": "^3.5.4"
  }
}
